{
  "name": "frc-web-components",
  "productName": "FRC Web Components",
  "version": "2.0.11",
  "description": "Electron app for FRC Web Components dashboard",
  "main": "src/index.js",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "lint": "echo \"No linting configured\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/frc-web-components/app.git"
  },
  "author": "Amory Galili",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/frc-web-components/app/issues"
  },
  "homepage": "https://github.com/frc-web-components/app#readme",
  "config": {
    "forge": {
      "packagerConfig": {
        "executableName": "FRC Web Components"
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "frc-web-components"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ],
      "publishers": [
        {
          "name": "@electron-forge/publisher-github",
          "config": {
            "repository": {
              "owner": "frc-web-components",
              "name": "app"
            },
            "prerelease": true
          }
        }
      ]
    }
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.63",
    "@electron-forge/maker-deb": "^6.0.0-beta.63",
    "@electron-forge/maker-rpm": "^6.0.0-beta.63",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.63",
    "@electron-forge/maker-zip": "^6.0.0-beta.63",
    "@electron-forge/publisher-github": "^6.0.0-beta.63",
    "electron": "^17.0.1"
  },
  "dependencies": {
    "@frc-web-components/components": "^2.0.11",
    "@vaadin/vaadin": "^17.0.7",
    "@webbitjs/store": "^3.1.0",
    "electron-squirrel-startup": "^1.0.0",
    "electron-store": "^8.0.1",
    "lit": "^2.0.0-rc.2",
    "node-ntcore": "^0.1.6"
  }
}
